# ============================================
# Playwright Recursive Crawler Configuration
# ============================================

# START_URL
# Crawler'ın başlangıç noktası. Crawling işlemi bu URL'den başlar.
START_URL=https://maxwin580.com

# OUTPUT_DIR
# Tüm indirilen dosyaların kaydedileceği klasör.
# Çıktı: ./crawled/html, ./crawled/css, ./crawled/images, vb.
OUTPUT_DIR=./crawled

# MAX_DEPTH
# Maksimum crawling derinliği (kaç seviye link takip edilecek)
# 0 = Sadece başlangıç sayfası
# 1 = Başlangıç + linkleri
# 2 = 2 seviye derinlik
# 3 = 3 seviye derinlik (önerilen)
MAX_DEPTH=3

# MAX_PAGES
# Maksimum taranacak sayfa sayısı (güvenlik limiti)
# Küçük siteler: 50-100
# Orta siteler: 200-500
# Büyük siteler: 1000+
MAX_PAGES=1000

# SAME_DOMAIN_ONLY
# Sadece aynı domain'deki linkleri takip et
# true = Sadece example.com'daki linkler (önerilen)
# false = Tüm external linkler de takip edilir (dikkatli kullan!)
SAME_DOMAIN_ONLY=true

# DELAY_MS
# Her sayfa arasındaki bekleme süresi (milisaniye)
# 0 = Gecikme yok (hızlı ama agresif)
# 1000 = 1 saniye (nazik, önerilen)
# 2000 = 2 saniye (çok nazik)
DELAY_MS=2000

# TIMEOUT_MS
# Bir sayfanın yüklenmesi için maksimum bekleme süresi (milisaniye)
# 15000 = 15 saniye (hızlı siteler)
# 30000 = 30 saniye (normal siteler, önerilen)
# 60000 = 60 saniye (yavaş siteler)
TIMEOUT_MS=30000

# OFFLINE_MODE
# Offline çalışan tam kopya oluştur
# true = HTML linkleri düzelt, path yapısını koru, tarayıcıda açılabilir
# false = Sadece dosya arşivi, linkler düzeltilmez (varsayılan)
OFFLINE_MODE=true
