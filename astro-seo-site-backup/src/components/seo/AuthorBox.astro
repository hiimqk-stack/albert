---
/**
 * AuthorBox Component
 * E-E-A-T Trust Layer - Displays author information with schema markup
 */

export interface Props {
  name: string;
  slug: string;
  title: string;
  experience: string;
  imageUrl?: string;
  showLink?: boolean;
}

const { 
  name, 
  slug, 
  title, 
  experience, 
  imageUrl = '/images/authors/default-author.jpg',
  showLink = true 
} = Astro.props;

const authorUrl = `/authors/${slug}`;
---

<div class="author-box" itemscope itemtype="https://schema.org/Person">
  <div class="author-image-wrapper">
    <img 
      src={imageUrl} 
      alt={name}
      class="author-image"
      width="80"
      height="80"
      loading="lazy"
    />
  </div>
  
  <div class="author-info">
    <p class="reviewed-label">Ä°nceleyen:</p>
    <h4 class="author-name" itemprop="name">
      {showLink ? (
        <a href={authorUrl}>{name}</a>
      ) : (
        <span>{name}</span>
      )}
    </h4>
    <p class="author-title" itemprop="jobTitle">{title}</p>
    <p class="author-experience">{experience}</p>
  </div>
</div>

<style>
  .author-box {
    display: flex;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
    margin: 2rem 0;
    border-left: 4px solid #0066cc;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .author-image-wrapper {
    flex-shrink: 0;
  }
  
  .author-image {
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .author-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .reviewed-label {
    font-size: 0.8rem;
    color: #666;
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .author-name {
    margin: 0 0 0.25rem 0;
    font-size: 1.1rem;
  }
  
  .author-name a {
    color: #0066cc;
    text-decoration: none;
  }
  
  .author-name a:hover {
    text-decoration: underline;
  }
  
  .author-title {
    font-weight: 600;
    color: #333;
    margin: 0 0 0.25rem 0;
    font-size: 0.95rem;
  }
  
  .author-experience {
    font-size: 0.85rem;
    color: #666;
    margin: 0;
  }
  
  @media (max-width: 480px) {
    .author-box {
      flex-direction: column;
      text-align: center;
      padding: 1rem;
    }
    
    .author-image-wrapper {
      display: flex;
      justify-content: center;
    }
  }
</style>
