  <script>
    document.getElementById('loginTime').textContent = new Date().toLocaleString('tr-TR');

    let accountsData = [];
    const accountsRef = database.ref('bankAccounts');

    function loadAccounts() {
      accountsRef.on('value', (snapshot) => {
        const data = snapshot.val();
        if (data) {
          accountsData = Object.keys(data).map(key => ({
            id: key,
            ...data[key]
          }));
        } else {
          accountsData = [];
        }
        renderTable();
      });
    }

    function renderTable() {
      const tbody = document.getElementById('accountsTable');
      tbody.innerHTML = accountsData.map(account => `
        <tr data-id="${account.id}">
          <td>${account.bankName}</td>
          <td>${account.accountHolder}</td>
          <td style="font-family: monospace; font-size: 13px;">${account.iban}</td>
          <td>
            <span class="status-badge ${account.active ? 'status-active' : 'status-inactive'}">
