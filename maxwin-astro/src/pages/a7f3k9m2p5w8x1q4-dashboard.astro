                Sil
              </button>
            </div>
          </td>
        </tr>
      `).join('');
    }

    function openEditModal(id) {
      const account = accountsData.find(acc => acc.id === id);
      if (!account) return;

      document.getElementById('editId').value = account.id;
      document.getElementById('editBankName').value = account.bankName;
      document.getElementById('editAccountHolder').value = account.accountHolder;
      document.getElementById('editIban').value = account.iban;
      document.getElementById('editActive').value = account.active.toString();
      
      document.getElementById('editModal').classList.add('active');
    }

    function closeModal() {
      document.getElementById('editModal').classList.remove('active');
    }

