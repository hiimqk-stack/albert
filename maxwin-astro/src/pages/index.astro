<style>
  .wrapper {
    max-width: 1360px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Hero Banner */
  .hero-banner {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    border-radius: 16px;
    padding: 80px 40px;
    text-align: center;
    margin-bottom: 60px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .hero-content h1 {
    font-size: 3.5rem;
    color: #fff;
    margin-bottom: 20px;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: #e0e0e0;
    margin-bottom: 40px;
    font-weight: 300;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 16px 48px;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    cursor: pointer;
  }

  .btn-primary {
    background: #4CAF50;
    color: white;
    box-shadow: 0 4px 15px rgba(76, 175, 80, 0.4);
  }

  .btn-primary:hover {
    background: #45a049;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(76, 175, 80, 0.6);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: white;
    color: #1a1a2e;
    transform: translateY(-2px);
  }

  .btn-bonus {
    background: #FFD700;
    color: #1a1a2e;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
  }

  .btn-bonus:hover {
    background: #FFC700;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 215, 0, 0.6);
  }

  /* Section Titles */
  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 40px;
    color: #1a1a2e;
    font-weight: 700;
  }

  /* Features Section */
  .features-section {
    margin-bottom: 60px;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .feature-card {
    background: white;
    padding: 40px 30px;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .feature-icon {
    font-size: 4rem;
    margin-bottom: 20px;
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 15px;
    color: #1a1a2e;
    font-weight: 600;
  }

  .feature-card p {
    color: #666;
    line-height: 1.6;
    font-size: 1rem;
  }

  /* Bonus Section */
  .bonus-section {
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    border-radius: 16px;
    padding: 60px 40px;
    text-align: center;
    margin-bottom: 60px;
    box-shadow: 0 10px 40px rgba(255, 215, 0, 0.3);
  }

  .bonus-content h2 {
    font-size: 2.5rem;
    color: #1a1a2e;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .bonus-content p {
    font-size: 1.3rem;
    color: #333;
    margin-bottom: 30px;
  }

  /* Games Preview */
  .games-preview {
    margin-bottom: 60px;
  }

  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
  }

  .game-card {
    background: white;
    border-radius: 12px;
    padding: 30px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
  }

  .game-placeholder {
    font-size: 4rem;
    margin-bottom: 15px;
  }

  .game-card h4 {
    font-size: 1.3rem;
    color: #1a1a2e;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .game-card p {
    color: #666;
    font-size: 0.95rem;
  }

  /* Trust Section */
  .trust-section {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 40px;
    margin-bottom: 40px;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    text-align: center;
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .trust-icon {
    font-size: 2rem;
    color: #4CAF50;
    font-weight: bold;
  }

  .trust-item span:last-child {
    font-size: 1.1rem;
    color: #333;
    font-weight: 500;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }

    .btn {
      padding: 14px 32px;
      font-size: 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .features-grid,
    .games-grid {
      grid-template-columns: 1fr;
    }

    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .hero-banner {
      padding: 60px 20px;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }

    .trust-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
