            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }
        
        .page-title {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .page-title h1 {
            font-size: 28px;
            font-weight: 600;
            color: #fff;
            margin-bottom: 8px;
        }
        
        .page-title p {
            color: rgba(255,255,255,0.5);
            font-size: 14px;
        }
        
        .sections {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 24px;
        }
        
        .section {
            background: var(--card-bg, #161b22);
            border: 1px solid var(--border-color, #30363d);
            border-radius: 8px;
            overflow: hidden;
        }
        
        .section-header {
            background: rgba(0,0,0,0.2);
            padding: 16px 20px;
            border-bottom: 1px solid var(--border-color, #30363d);
        }
        
        .section-header h2 {
            font-size: 16px;
            font-weight: 500;
            color: var(--primary-color, #ACF000);
            margin: 0;
        }
        
        .section-body {
            padding: 20px;
        }
        
        .account {
            background: rgba(0,0,0,0.2);
            border-radius: 6px;
            padding: 16px;
            margin-bottom: 12px;
        }
        
        .account:last-child {
            margin-bottom: 0;
        }
        
        .account-name {
            font-size: 14px;
            font-weight: 600;
            color: #fff;
            margin-bottom: 12px;
            padding-bottom: 8px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .account-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 6px 0;
            font-size: 13px;
        }
        
        .account-row .label {
            color: rgba(255,255,255,0.5);
        }
        
        .account-row .value {
            color: #fff;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .copy-btn {
            background: transparent;
            border: 1px solid var(--primary-color, #ACF000);
            color: var(--primary-color, #ACF000);
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 11px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .copy-btn:hover {
            background: var(--primary-color, #ACF000);
            color: #000;
        }
        
        .copy-btn.copied {
            background: var(--primary-color, #ACF000);
            color: #000;
        }
        
        .crypto-address {
            font-family: monospace;
            font-size: 11px;
            word-break: break-all;
            background: rgba(0,0,0,0.3);
            padding: 8px;
            border-radius: 4px;
            margin-top: 4px;
        }
        
        .min-badge {
            display: inline-block;
            background: rgba(172,240,0,0.1);
            color: var(--primary-color, #ACF000);
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 11px;
            margin-top: 8px;
        }
        
        .info-box {
            background: rgba(255,107,0,0.1);
            border: 1px solid rgba(255,107,0,0.2);
            border-radius: 8px;
            padding: 20px;
            margin-top: 24px;
            text-align: center;
        }
        
        .info-box h3 {
            color: #ff6b00;
            font-size: 14px;
            margin-bottom: 8px;
        }
        
        .info-box p {
            color: rgba(255,255,255,0.7);
            font-size: 13px;
            line-height: 1.6;
